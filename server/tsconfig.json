{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",                                  /* Set to ES2020 for newer JavaScript features. */
    "lib": ["ES2020", "DOM"],                            /* Include ECMAScript 2020 and DOM APIs. */
    "module": "commonjs",                                /* Use CommonJS modules for Node.js. */
    "rootDir": "./src",                                  /* Specify the root folder for source files. */
    "outDir": "./dist",                                  /* Specify the output folder for compiled files. */
    
    /* Interop Constraints */
    "esModuleInterop": true,                             /* Enable ES module interoperability. */
    "forceConsistentCasingInFileNames": true,            /* Enforce consistent casing in imports. */

    /* Type Checking */
    "strict": true,                                      /* Enable all strict type checking options. */
    
    /* Emit */
    "skipLibCheck": true                                 /* Skip type checking of declaration files. */
  }
}
